<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Find a Slice</title>
  </head>

  <body class="index">
    <nav>
      <button><a href="/pizza/new">Add a Slice</a></button>
    </nav>

    <h1>How You Dooin?</h1>

    <ul>
      <% allPizzas.forEach(pizza => { %>
      <li>
        <a href="/pizza/<%=pizza.id; %>"> <%=pizza.name; %> </a>

        <form action="/pizza/<%= pizza.id %>/delete/" method="POST">
          <input type="submit" value="DELETE" />
        </form>
      </li>

      <% }) %>
    </ul>
